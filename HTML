<body>
  <div class="container">
    <h1>Community Resource Finder</h1>
    <p>Locate nearby resources and get AI-powered suggestions.</p>

    <!-- Location Input -->
    <div>
      <label for="location">Enter Your Location:</label>
      <input
        type="text"
        id="location"
        placeholder="e.g., Nairobi, Kenya"
        autocomplete="off"
      />
      <button
        onclick="findResources()"
        id="findBtn"
      >
        Find Resources
      </button>
      <p id="locationError" class="text-red-500 hidden">Please enter a valid location.</p>
    </div>

    <!-- AI Suggestion Input -->
    <div style="margin-top: 2rem;">
      <label for="needs">Describe Your Needs:</label>
      <input
        type="text"
        id="needs"
        placeholder="e.g., I need food assistance"
        autocomplete="off"
      />
      <button
        onclick="getAISuggestion()"
        id="suggestBtn"
      >
        Get AI Suggestion
      </button>
      <p id="ai-suggestion" style="margin-top: 0.5rem; color: #dbeafe;"></p>
      <p id="needsError" class="text-red-500 hidden">Please describe your needs.</p>
    </div>

    <!-- Map Display -->
    <div id="map"></div>
    <p id="mapError" class="text-red-500 text-center hidden">
      Failed to load map. Check your API key or enable the Maps JavaScript API.
    </p>

    <!-- Footer -->
    <footer>
      Made for Vibe Coding Hackathon 2025 | #1MillionDevs4Africa
    </footer>
  </div>

  <script>
    let map;
    const defaultCoords = { lat: -1.2921, lng: 36.8219 }; // Nairobi, Kenya
    let markers = [];

    // Clear all markers from the map
    function clearMarkers() {
      markers.forEach(marker => marker.setMap(null));
      markers = [];
    }

    // Dynamically load Google Maps JS API
    function loadMapScript() {
      const script = document.createElement("script");
      // REPLACE "YOUR_API_KEY" with your actual Google Maps API key here:
      script.src = "https://maps.googleapis.com/maps/api/js?key=YOUR_API_KEY&callback=initMap";
      script.async = true;
      script.defer = true;
      script.onerror = () => {
        document.getElementById("mapError").classList.remove("hidden");
      };
      document.head.appendChild(script);
    }

    // Initialize map after Google Maps script loads
    function initMap() {
      try {
        map = new google.maps.Map(document.getElementById("map"), {
          center: defaultCoords,
          zoom: 12,
        });
      } catch (error) {
        document.getElementById("mapError").classList.remove("hidden");
        console.error("Map initialization error:", error);
      }
    }

    // Load Google Maps script on window load
    window.onload = loadMapScript;

    // Find nearby resources (mocked)
    function findResources() {
      const locationInput = document.getElementById("location").value.trim();
      const findBtn = document.getElementById("findBtn");
      const locationError = document.getElementById("locationError");

      if (!locationInput) {
        locationError.classList.remove("hidden");
        return;
      }
      locationError.classList.add("hidden");
      findBtn.disabled = true;

      // Clear previous markers before adding new ones
      clearMarkers();

      if (map) {
        // For demo, center the map at default coords always
        map.setCenter(defaultCoords);

        // Mock resource locations
        const resources = [
          { name: "Nairobi Food Bank", lat: -1.29, lng: 36.82 },
          { name: "City Shelter", lat: -1.295, lng: 36.825 },
          { name: "Health Clinic", lat: -1.3, lng: 36.83 },
        ];

        resources.forEach(resource => {
          const marker = new google.maps.Marker({
            position: { lat: resource.lat, lng: resource.lng },
            map: map,
            title: resource.name,
            icon: {
              url: "http://maps.google.com/mapfiles/ms/icons/blue-dot.png",
            },
          });
          markers.push(marker);
        });
      } else {
        document.getElementById("mapError").classList.remove("hidden");
      }

      findBtn.disabled = false;
    }

    // Mock AI suggestion function
    function getAISuggestion() {
      const needs = document.getElementById("needs").value.trim();
      const suggestBtn = document.getElementById("suggestBtn");
      const needsError = document.getElementById("needsError");
      const suggestionElement = document.getElementById("ai-suggestion");

      if (!needs) {
        needsError.classList.remove("hidden");
        return;
      }
      needsError.classList.add("hidden");
      suggestBtn.disabled = true;
      suggestionElement.textContent = "Processing...";

      setTimeout(() => {
        const suggestions = {
          food: "Visit the nearest food bank. Check 'Nairobi Food Bank' on the map.",
          shelter: "Seek shelter at 'City Shelter' on the map.",
          health: "Visit 'Health Clinic' on the map for medical assistance.",
          default: "Try specifying 'food', 'shelter', or 'health' for better suggestions.",
        };

        const lowerNeeds = needs.toLowerCase();
        const suggestion =
          lowerNeeds.includes("food")
            ? suggestions.food
            : lowerNeeds.includes("shelter")
            ? suggestions.shelter
            : lowerNeeds.includes("health")
            ? suggestions.health
            : suggestions.default;

        suggestionElement.textContent = `AI Suggestion: ${suggestion}`;
        suggestBtn.disabled = false;
      }, 1000);
    }
  </script>
</body>
</html>
