      color: #dbeafe !important; /* light text */
      transition: box-shadow 0.3s ease;
    }

    input[type="text"]::placeholder {
      color: #93c5fd;
    }

    input[type="text"]:focus {
      box-shadow: 0 0 0 2px #60a5fa;
      border-color: #60a5fa;
    }

    /* Buttons */
    button {
      margin-top: 0.5rem;
      padding: 0.5rem 1rem;
